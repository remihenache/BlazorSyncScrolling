@page "/"

<PageTitle>PDF Sync Demo</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-primary mb-3">
                <i class="bi bi-file-earmark-pdf-fill me-2"></i>
                PDF Synchronization Demo
            </h1>
            <p class="lead text-muted">
                Experience seamless synchronized scrolling between multiple PDF documents.
                This demo showcases the BlazorSyncScrolling library's capabilities for creating
                coordinated viewing experiences.
            </p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-3">
                        <i class="bi bi-gear-fill me-2"></i>Controls
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="pdf1-file" class="form-label">PDF Document 1</label>
                            <InputFile class="form-control" id="pdf1-file" accept=".pdf" OnChange="OnPdf1Selected" />
                        </div>
                        <div class="col-md-6">
                            <label for="pdf2-file" class="form-label">PDF Document 2</label>
                            <InputFile class="form-control" id="pdf2-file" accept=".pdf" OnChange="OnPdf2Selected" />
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="syncEnabled" @bind="IsSyncEnabled" />
                                <label class="form-check-label fw-semibold" for="syncEnabled">
                                    <i class="bi bi-arrow-left-right me-1"></i>
                                    Enable Synchronized Scrolling
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (string.IsNullOrEmpty(Pdf1Source) && string.IsNullOrEmpty(Pdf2Source))
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-cloud-upload display-1 text-muted mb-3"></i>
                        <h3 class="text-muted">Upload PDF Files to Get Started</h3>
                        <p class="text-muted">
                            Select two PDF files using the controls above to see the synchronized scrolling in action.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <SyncScrollCoordinator>
            <div class="row g-3">
                @if (!string.IsNullOrEmpty(Pdf1Source))
                {
                    <div class="col-lg-6">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0">
                                    <i class="bi bi-file-earmark-pdf me-2"></i>
                                    Document 1
                                </h6>
                            </div>
                            <div class="card-body p-0">
                                <PdfViewer Src="@Pdf1Source" CanSyncScroll="@IsSyncEnabled" />
                            </div>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Pdf2Source))
                {
                    <div class="col-lg-6">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-success text-white">
                                <h6 class="mb-0">
                                    <i class="bi bi-file-earmark-pdf me-2"></i>
                                    Document 2
                                </h6>
                            </div>
                            <div class="card-body p-0">
                                <PdfViewer Src="@Pdf2Source" CanSyncScroll="@IsSyncEnabled" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </SyncScrollCoordinator>
    }
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .form-control:focus {
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .text-primary {
        color: #0d6efd !important;
    }
</style>